<div class="container">
    <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-9">
                <div class="card offset-3" style="margin-top: 6em;">
                    <div class="card-header text text-center">
                        <h3 class="text-primary">Create Blog</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% if(status && message); { %>
                                <div class="col-12 text text-danger">
                                    <%= message; %>
                                </div>
                                <%} %>
                            <div class="text-end">
                                <a href="/all-blogs" class="btn btn-outline-primary">Back</a>
                            </div>
                            <div class="col-6">
                                <label>Title</label>
                                <input type="text" name="title" id="title" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label>Image</label>
                                <input type="file" name="blogimage" class="form-control" multiple="multiple">
                            </div>
                            <div class="col-12 mt-2">
                                <label>Description</label>
                                <textarea name="description" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </div>
                </div>
            </div>
    </form>
</div>