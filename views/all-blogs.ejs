<div class="container">
    <div class="row">
        <div class="row">
            <div style="margin-top: 1em; text-align: right;">
                <a href="/blog" class="btn btn-outline-primary">Add new</a>
            </div>
            <div class="col-12">
                <% for(let i = 0; i < user.length; i++) { 
                    let blog = user[i]; 
                    let imgName = (blog.image) ? blog.image.split(",")[0] : "" ; %>
                <div class="card">
                    <div class="card-header"><h5 class="text-primary"><%= blog.title; %></h5></div>
                    <div class="card-body">
                           <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-3">
                                        <img src="/images/<%= imgName; %>" alt="internal server error" width="200" height="200">
                                    </div>
                                    <div class="col-6">
                                        <div class="col-12 mt-5 h4"><%= blog.description; %></div>
                                    </div>
                                </div>
                            </div>
                           </div>
                    </div>
                    <div class="card-footer text-end">
                        <span>Create by<%= blog.fullName; %></span>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>